  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@tiptap/core": "^2.0.2",
    "@tiptap/pm": "^2.0.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/pm": "^2.0.0"
  }
